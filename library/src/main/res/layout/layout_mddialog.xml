<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_design_dialog_title_height">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="@dimen/material_design_dialog_title_imageview_height"
            android:layout_height="@dimen/material_design_dialog_title_imageview_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/material_design_dialog_title_imageview_margin_left"
            android:layout_marginRight="@dimen/material_design_dialog_title_imageview_margin_right"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_title"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/material_design_dialog_title_padding"
            android:singleLine="true"
            android:text="提示"
            android:textColor="@color/material_design_dialog_blue"
            android:textSize="@dimen/material_design_dialog_title_textsize" />

        <!--<View-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginLeft="@dimen/md_dialog_margin"-->
        <!--android:layout_marginRight="@dimen/md_dialog_margin"-->
        <!--android:background="@color/md_dialog_divider_dark" />-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/rl_buttons"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_design_dialog_buttons_height"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/material_design_dialog_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/material_design_dialog_title_button_margin_right"
            android:gravity="center"
            android:paddingBottom="@dimen/material_design_dialog_bottom_button_padding_5dp"
            android:paddingLeft="@dimen/material_design_dialog_bottom_button_padding_8dp"
            android:paddingRight="@dimen/material_design_dialog_bottom_button_padding_8dp"
            android:paddingTop="@dimen/material_design_dialog_bottom_button_padding_5dp"
            android:text="取消"
            android:textColor="@color/material_design_dialog_gray_dark"
            android:textSize="@dimen/material_design_dialog_bottom_button_textsize" />

        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingBottom="@dimen/material_design_dialog_bottom_button_padding_5dp"
            android:paddingLeft="@dimen/material_design_dialog_bottom_button_padding_8dp"
            android:paddingRight="@dimen/material_design_dialog_bottom_button_padding_8dp"
            android:paddingTop="@dimen/material_design_dialog_bottom_button_padding_5dp"
            android:text="确定"
            android:textColor="@color/material_design_dialog_blue"
            android:textSize="@dimen/material_design_dialog_bottom_button_textsize" />
    </LinearLayout>

</LinearLayout>